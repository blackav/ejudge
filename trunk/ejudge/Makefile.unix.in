version.c: revinfo $(HFILES) $(CFILES) $(OTHERFILES)
	REVINFO_NO_COMMIT=1 ./revinfo -S -C -p -d db/versions -r db/revisions $(HFILES) $(CFILES) $(OTHERFILES)
