prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
datarootdir=@datarootdir@
datadir=@datadir@
includedir=@includedir@
libdir=@libdir@
libexecdir=@libexecdir@
cgibindir=@cgibindir@

CGI_PROG_SUFFIX=@ac_cv_cgi_suffix@
STATIC=@ac_cv_static@
NO_KERNEL=@ac_cv_no_kernel@
ENABLE_NLS=@ac_cv_nls@
WPTRSIGN=@ac_cv_gcc_wno_pointer_sign@

XGETTEXT=@XGETTEXT@
MSGMERGE=@MSGMERGE@
MSGFMT=@MSGFMT@

REUSE_DIR=@ac_cv_reuse_root@
REUSE_CONF=@ac_cv_reuse_config@
REUSE_INCL_OPT=@ac_cv_reuse_include_opt@
REUSE_LIB_OPT=@ac_cv_reuse_lib_opt@

EXPAT_DIR=@ac_cv_expat_root@
EXPAT_INCL_OPT=@ac_cv_expat_include_opt@
EXPAT_LIB_OPT=@ac_cv_expat_lib_opt@

LIBCAP_DIR=@ac_cv_libcap_root@
LIBCAP_INCL_OPT=@ac_cv_libcap_include_opt@
LIBCAP_LIB_OPT=@ac_cv_libcap_lib_opt@

ifdef RELEASE
CDEBUGFLAGS=-O2 -s -Wall -DNDEBUG -DRELEASE
else
CDEBUGFLAGS=-g -Wall
endif

ifdef STATIC
CDEBUGFLAGS += -static
endif

CC=gcc
LD=gcc
CFLAGS=${LIBCAP_INCL_OPT} ${CDEBUGFLAGS} ${CCOMPFLAGS} ${CINTLFLAG} ${CEXTRAFLAGS} ${WPTRSIGN}
LDFLAGS=${LIBCAP_LIB_OPT} ${CDEBUGFLAGS} ${LDCOMPFLAGS} ${LDEXTRAFLAGS}

TARGETS=bpcemu2 dosrun3 bppemu bccemu qbemu ej-javac
TARGETALLWAYS=${TARGETS}
ifndef NO_KERNEL
TARGETS += capexec
ifndef STATIC
TARGETS += libdropcaps.so
endif
endif

all: ${TARGETS}
clean:
	-rm -f ${TARGETS} *.o
distclean: clean
	rm -f Makefile
install:
	mkdir -p "${DESTDIR}${libexecdir}/ejudge"
	for i in ${TARGETALLWAYS}; do install -m 755 $$i "${DESTDIR}${libexecdir}/ejudge"; done
	if [ x"${NO_KERNEL}" = x ]; then install -m 755 capexec "${DESTDIR}${libexecdir}/ejudge"; fi
	if [ x"${NO_KERNEL}" = x -a x"${STATIC}" = x ]; then install -m 755 libdropcaps.so "${DESTDIR}${libexecdir}/ejudge"; fi

bpcemu2: bpcemu2.o
	${LD} ${LDFLAGS} $^ -o $@ ${LDLIBS}
bpcemu2.o: bpcemu2.c

bppemu: bppemu.o
	${LD} ${LDFLAGS} $^ -o $@ ${LDLIBS}
bppemu.o: bppemu.c

bccemu: bccemu.o
	${LD} ${LDFLAGS} $^ -o $@ ${LDLIBS}
bccemu.o: bccemu.c

qbemu: qbemu.o
	${LD} ${LDFLAGS} $^ -o $@ ${LDLIBS}
qbemu.o: qbemu.c

capexec: capexec.o
	${LD} ${LDFLAGS} $^ -o $@ -lcap ${LDLIBS}
capexec.o: capexec.c

libdropcaps.so : libdropcaps.o
	${LD} -shared ${LDFLAGS} $^ -o $@ -lcap ${LDLIBS}
libdropcaps.o : libdropcaps.c
	${CC} ${CFLAGS} -DPIC -fPIC -c libdropcaps.c -o libdropcaps.o

dosrun3: dosrun3.o
	${LD} ${LDFLAGS} $^ -o $@ ${LDLIBS}
dosrun3.o: dosrun3.c

ej-javac : ej-javac.o
	${LD} ${LDFLAGS} $^ -o $@ ${LDLIBS}
ej-javac.o : ej-javac.c
