# This is a `compilation' script for Dr. Scheme language.
# The idea is to append "#!${MZSCHEMEPATH} -qr" string
# to the beginning of the file.
# Usage: mzscheme <input> <output>

# using EJUDGE_FLAGS we may pass additional flags

LANG_CONFIG_DIR="@lang_config_dir@"
[ "${EJUDGE_LANG_CONFIG}" = "" ] && EJUDGE_LANG_CONFIG="${LANG_CONFIG_DIR}/mzscheme.cfg"

if [ -f "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  version_mzscheme="unknown"
  MZSCHEMEPATH="/usr/bin/mzscheme"
fi

if [ x"${version_mzscheme}" = x ]
then
  echo "This language is not supported." >&2
  exit 1
fi

echo "#! ${MZSCHEMEPATH} -qr ${EJUDGE_FLAGS}" > $2
echo >> $2
cat $1 >> $2
chmod +x $2
exit 0
