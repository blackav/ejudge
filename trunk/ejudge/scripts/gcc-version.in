SCRIPT_DIR="@ac_cv_lang_script_dir_expanded@"

[ "${EJUDGE_LANG_CONFIG}" = "" ] && EJUDGE_LANG_CONFIG="${SCRIPT_DIR}/lang-config.sh"

if [ -x "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  GCCRUN="gcc"
  GCCDIR=
fi

if [ x"${GCCRUN}" = x -o x"${GCCRUN}" = xfalse ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"${GCCDIR}" != x ]
then
    PATH="${GCCDIR}:${PATH}"
fi

if [ x"$1" = x-p ]
then
    echo "${GCCRUN}"
    exit 0
fi
    
"${GCCRUN}" -v 2>/dev/null >/dev/null || exit 1

[ x"$1" = x-f ] && echo -n "GNU C "

"${GCCRUN}" -v 2>&1 | grep "gcc version" | sed 's/gcc version //g'
