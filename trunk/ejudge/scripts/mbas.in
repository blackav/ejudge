# A script for compilation of Visual Basic programs using the Mono suite.
# Usage: mbas in-file out-file

# using EJUDGE_FLAGS we may pass additional flags

MBASRUN="@ac_cv_contest_mbas@"
MBASDIR="@ac_cv_contest_mono_dir@"

if [ x"${MBASRUN}" = x -o x"${MBASRUN}" = xno ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"${MBASDIR}" != x ]
then
  PATH="${MBASDIR}/bin:${PATH}"
fi

exec "${MBASRUN}" ${EJUDGE_FLAGS} "$1" -out:"$2"
