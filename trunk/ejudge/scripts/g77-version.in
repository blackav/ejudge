LANG_CONFIG_DIR="@ac_cv_lang_config_dir_expanded@"

function failure()
{
  rm -f conftest*
  echo 'version_g77='
  echo 'arg_g77="'"${arg_g77}"'"'
  echo 'G77RUN=false'
  echo 'G77DIR='
  [ "${verbose}" = 1 ] && echo "no" >&2
  exit 1
}

if [ x"$1" = x-v ]
then
  verbose=1
  shift
fi

# recheck the language
if [ x"$1" = x-r ]
then
  arg_g77="$2"
  [ x"$2" != x ] && G77RUN="$2"
  [ "${G77RUN}" = "" ] && G77RUN="g77"

  [ "${verbose}" = 1 ] && echo -n "checking whether GNU Fortran 77 is available..." >&2
  "${G77RUN}" -v >/dev/null 2>/dev/null || failure
  version_g77=`"${G77RUN}" --version | grep "GNU Fortran (GCC)" | gawk '{ print $4; }'` || failure
  [ "${version_g77}" != x ] || failure
  echo "        END" > conftest.for
  "${G77RUN}" -static -s conftest.for -o conftest 2>/dev/null >/dev/null || failure
  [ -x conftest ] || failure
  ./conftest > /dev/null 2>/dev/null || failure

  rm -f ./conftest*
  G77DIR=`dirname "${G77RUN}"`
  [ "${G77DIR}" = . ] && G77DIR=""
  echo 'version_g77="'"${version_g77}"'"'
  echo 'arg_g77="'"${arg_g77}"'"'
  echo 'G77RUN="'"${G77RUN}"'"'
  echo 'G77DIR="'"${G77DIR}"'"'
  [ "${verbose}" = 1 ] && echo "yes, ${G77RUN}, ${version_g77}" >&2
  exit 0
fi

if [ x"$1" = x-l ]
then
  echo "GNU Fortran 77 compiler (obsoleted by gfortran) [http://gcc.gnu.org]"
  exit 0
fi

if [ x"$1" = x-b ]
then
  echo "GNU Fortran 77"
  exit 0
fi

if [ x"$1" = x-c ]
then
  cat <<EOF
src_sfx = ".for"
EOF
  exit 0
fi

[ "${EJUDGE_LANG_CONFIG}" = "" ] && EJUDGE_LANG_CONFIG="${LANG_CONFIG_DIR}/g77.cfg"

if [ -f "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  G77RUN="g77"
  G77DIR=
fi

if [ x"${G77RUN}" = x -o x"${G77RUN}" = xfalse ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"${G77DIR}" != x ]
then
    PATH="${G77DIR}:${PATH}"
fi

if [ x"$1" = x-p ]
then
    echo "${G77RUN}"
    exit 0
fi
    
"${G77RUN}" --version 2>/dev/null >/dev/null || exit 1

[ x"$1" = x-f ] && echo -n "GNU Fortran 77 "

"${G77RUN}" --version | grep "GNU Fortran (GCC)" | gawk '{ print $4; }'
[ $? != 0 -a $? != 1 ] && exit 1
exit 0
