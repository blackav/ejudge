SCRIPT_DIR="@ac_cv_lang_script_dir_expanded@"

[ "${EJUDGE_LANG_CONFIG}" = "" ] && EJUDGE_LANG_CONFIG="${SCRIPT_DIR}/lang-config.sh"

if [ -x "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  G77RUN="g77"
  G77DIR=
fi

if [ x"${G77RUN}" = x -o x"${G77RUN}" = xfalse ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"${G77DIR}" != x ]
then
    PATH="${G77DIR}:${PATH}"
fi

if [ x"$1" = x-p ]
then
    echo "${G77RUN}"
    exit 0
fi
    
"${G77RUN}" --version 2>/dev/null >/dev/null || exit 1

[ x"$1" = x-f ] && echo -n "GNU Fortran 77 "

"${G77RUN}" --version | grep "GNU Fortran (GCC)" | gawk '{ print $4; }'
[ $? != 0 -a $? != 1 ] && exit 1
exit 0
