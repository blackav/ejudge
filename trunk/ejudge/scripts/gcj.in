# using EJUDGE_FLAGS we may pass additional flags

LANG_CONFIG_DIR="@ac_cv_lang_config_dir_expanded@"
[ "${EJUDGE_LANG_CONFIG}" = "" ] && EJUDGE_LANG_CONFIG="${LANG_CONFIG_DIR}/gcj.cfg"

if [ -f "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  GCJRUN="gcj"
  GCJDIR=
fi

if [ x"${GCJRUN}" = x -o x"${GCJRUN}" = xfalse ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"${GCJDIR}" != x ]
then
    PATH="${GCJDIR}:${PATH}"
fi

[ x"${EJUDGE_FLAGS}" = x ] && EJUDGE_FLAGS="-Wall -O2"

mv "$1" Main.java
exec "${GCJRUN}" ${EJUDGE_FLAGS} --main=Main -s Main.java -o "$2"
