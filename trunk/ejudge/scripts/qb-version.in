libexecdir="@libexecdir@"
contests_home_dir="@contests_home_dir@"
local_dir="@local_dir@"
LANG_CONFIG_DIR="@lang_config_dir@"

function common_config()
{
  echo 'long_name="Microsoft Quick Basic"'
  echo 'src_sfx=".bas"'
  echo 'exe_sfx=".exe"'
  echo 'arch="dos"'
}

function failure()
{
  rm -f conftest*
  echo 'version='
  echo 'arg="'"${arg}"'"'
  common_config
  echo 'QBRUN=false'
  [ "${verbose}" = 1 ] && echo "no" >&2
  exit 1
}

if [ x"$1" = x-v ]
then
  verbose=1
  shift
fi

# recheck the language
if [ x"$1" = x-r ]
then
  arg="$2"
  [ x"$2" != x ] && QBRUN="$2"
  [ "${QBRUN}" = "" ] && QBRUN="${libexecdir}/ejudge/lang/qbemu"

  [ "${verbose}" = 1 ] && echo -n "checking whether Microsoft Quick Basic 4.5 is available..." >&2

  [ -x "${QBRUN}" ] || failure
  dosdir="${local_dir}"
  [ "${dosdir}" != "" ] || dosdir="${contests_home_dir}"
  [ -d "${dosdir}" ] || failure
  dosdir="${dosdir}/dosemu"
  [ -d "${dosdir}" ] || failure
  [ -x "${dosdir}/bin/dos" ] || failure
  [ -f "${dosdir}/boot/QB/BC.EXE" ] || failure
  version="4.5"

  rm -f ./conftest*
  echo 'version="'"${version}"'"'
  echo 'arg="'"${arg}"'"'
  common_config
  echo 'QBRUN="'"${QBRUN}"'"'
  [ "${verbose}" = 1 ] && echo "yes, ${QBRUN}, ${version}" >&2
  exit 0
fi

if [ x"$1" = x-l ]
then
  echo "Microsoft Quick Basic 4.5 (DOS mode)"
  exit 0
fi

[ "${EJUDGE_LANG_CONFIG}" = "" ] && EJUDGE_LANG_CONFIG="${LANG_CONFIG_DIR}/qb.cfg"

if [ -f "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
fi

if [ x"${QBRUN}" = x -o x"${QBRUN}" = xfalse ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"$1" = x-p ]
then
    echo "${QBRUN}"
    exit 0
fi

[ x"$1" = x-f ] && echo -n "Microsoft Quick Basic "
echo "4.5"
