# A script for compilation of Visual Basic programs using the Mono suite.
# Usage: vbnc in-file out-file

# using EJUDGE_FLAGS we may pass additional flags

SCRIPT_DIR="@ac_cv_lang_script_dir_expanded@"
EJUDGE_LANG_CONFIG="${SCRIPT_DIR}/lang-config.sh"

if [ -x "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  VBNCRUN="vbnc"
  VBNCDIR=""
fi

if [ x"${VBNCRUN}" = x -o x"${VBNCRUN}" = xfalse ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"${VBNCDIR}" != x ]
then
  PATH="${VBNCDIR}/bin:${PATH}"
fi

exec "${VBNCRUN}" ${EJUDGE_FLAGS} "$1" -out:"$2"
