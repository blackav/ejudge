GFORTRANRUN="@ac_cv_contest_gfortran@"
GFORTRANDIR="@ac_cv_contest_gfortran_dir@"

if [ x"${GFORTRANRUN}" = x -o x"${GFORTRANRUN}" = xno ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"${GFORTRANDIR}" != x ]
then
    PATH="${GFORTRANDIR}:${PATH}"
fi

if [ x"$1" = x-p ]
then
    echo "${GFORTRANRUN}"
    exit 0
fi
    
"${GFORTRANRUN}" --version 2>/dev/null >/dev/null || exit 1

[ x"$1" = x-f ] && echo -n "GNU Fortran 90 "

"${GFORTRANRUN}" --version | grep "GNU Fortran (GCC)" | gawk '{ print $4; }'
[ $? != 0 -a $? != 1 ] && exit 1
exit 0
