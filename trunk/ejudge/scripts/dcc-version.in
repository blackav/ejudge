SCRIPT_DIR="@ac_cv_lang_script_dir_expanded@"

[ "${EJUDGE_LANG_CONFIG}" = "" ] && EJUDGE_LANG_CONFIG="${SCRIPT_DIR}/lang-config.sh"

if [ -x "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  DCCRUN="dcc"
  DCCDIR=
fi

if [ x"${DCCRUN}" = x -o x"${DCCRUN}" = xfalse ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"${DCCDIR}" != x ]
then
    PATH="${DCCDIR}:${PATH}"
    KYLIXDIR="${DCCDIR}"
    export KYLIXDIR
fi

if [ x"$1" = x-p ]
then
    echo "${DCCRUN}"
    exit 0
fi

"${DCCRUN}" -h 2>/dev/null >/dev/null || exit 1
    
[ x"$1" = x-f ] && echo -n "Borland Delphi 6 - "

"${DCCRUN}" -h 2>/dev/null | grep "Borland Delphi" | gawk '{ print $6; }'
