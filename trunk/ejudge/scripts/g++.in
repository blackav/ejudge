# using EJUDGE_FLAGS we may pass additional flags

LANG_CONFIG_DIR="@lang_config_dir@"
[ "${EJUDGE_LANG_CONFIG}" = "" ] && EJUDGE_LANG_CONFIG="${LANG_CONFIG_DIR}/g++.cfg"

if [ -f "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  version="unknown"
  GPPRUN="g++"
  GPPDIR=
fi

if [ x"${version}" = x ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"${GPPDIR}" != x ]
then
    PATH="${GPPDIR}:${PATH}"
fi

[ x"${EJUDGE_FLAGS}" = x ] && EJUDGE_FLAGS="-Wall -O2 -std=gnu++11"
#[ x"${EJUDGE_LIBS}" = x ] && EJUDGE_LIBS="-lm"

unset LANG
unset LC_ALL
unset LC_MESSAGES
unset LANGUAGE

exec "${GPPRUN}" ${EJUDGE_FLAGS} -static "$1" -o "$2" -lm ${EJUDGE_LIBS}
