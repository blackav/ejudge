SCRIPT_DIR="@ac_cv_lang_script_dir_expanded@"

[ "${EJUDGE_LANG_CONFIG}" = "" ] && EJUDGE_LANG_CONFIG="${SCRIPT_DIR}/lang-config.sh"

if [ -x "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  MZSCHEMEPATH="/usr/bin/mzscheme"
fi

if [ x"${MZSCHEMEPATH}" = x -o x"${MZSCHEMEPATH}" = xfalse ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"$1" = x-p ]
then
    echo "${MZSCHEMEPATH}"
    exit 0
fi
    
"${MZSCHEMEPATH}" --version 2>/dev/null >/dev/null || exit 1

[ x"$1" = x-f ] && echo -n "Mz Scheme "

"${MZSCHEMEPATH}" --version 2>&1 | grep "MzScheme" | gawk -v FS="[ ,]" '{ if ($4 == "version") print $5; else print $4; }'
