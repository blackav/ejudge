# This is a `compilation' script for yabasic language.
# The idea is to append "#!${YABASICPATH}" string
# to the beginning of the file.
# Usage: yabasic <input> <output>

# using EJUDGE_FLAGS we may pass additional flags

SCRIPT_DIR="@ac_cv_lang_script_dir_expanded@"
EJUDGE_LANG_CONFIG="${SCRIPT_DIR}/lang-config.sh"

if [ -x "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  YABASICPATH="/usr/bin/yabasic"
fi

if [ x"${YABASICPATH}" = x -o x"${YABASICPATH}" = xfalse ]
then
  echo "This language is not supported." >&2
  exit 1
fi

echo "#!${YABASICPATH} ${EJUDGE_FLAGS}" > $2
echo >> $2
cat $1 >> $2
chmod +x $2
exit 0
