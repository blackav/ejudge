GPCRUN="@ac_cv_contest_gpc@"
GPCDIR="@ac_cv_contest_gpc_dir@"

if [ x"${GPCRUN}" = x -o x"${GPCRUN}" = xno ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"${GPCDIR}" != x ]
then
    PATH="${GPCDIR}:${PATH}"
fi

if [ x"$1" = x-p ]
then
    echo "${GPCRUN}"
    exit 0
fi
    
"${GPCRUN}" --version 2>/dev/null >/dev/null || exit 1

[ x"$1" = x-f ] && echo -n "GNU Pascal "

"${GPCRUN}" --version | gawk '{ print $1; }'
[ $? != 0 -a $? != 1 ] && exit 1
exit 0
