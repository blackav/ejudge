# using EJUDGE_FLAGS we may pass additional flags

LANG_CONFIG_DIR="@ac_cv_lang_config_dir_expanded@"
[ "${EJUDGE_LANG_CONFIG}" = "" ] && EJUDGE_LANG_CONFIG="${LANG_CONFIG_DIR}/gcc.cfg"

if [ -f "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  version_gcc="unknown"
  GCCRUN="gcc"
  GCCDIR=
fi

if [ x"${version_gcc}" = x ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"${GCCDIR}" != x ]
then
    PATH="${GCCDIR}:${PATH}"
fi

[ x"${EJUDGE_FLAGS}" = x ] && EJUDGE_FLAGS="-Wall -O2 -std=gnu99"

unset LANG
exec "${GCCRUN}" ${EJUDGE_FLAGS} -static -s "$1" -o "$2" -lm
