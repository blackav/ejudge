# using EJUDGE_FLAGS we may pass additional flags

SCRIPT_DIR="@ac_cv_lang_script_dir_expanded@"
EJUDGE_LANG_CONFIG="${SCRIPT_DIR}/lang-config.sh"

if [ -x "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  GCCRUN="gcc"
  GCCDIR=
fi

if [ x"${GCCRUN}" = x -o x"${GCCRUN}" = xfalse ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"${GCCDIR}" != x ]
then
    PATH="${GCCDIR}:${PATH}"
fi

[ x"${EJUDGE_FLAGS}" = x ] && EJUDGE_FLAGS="-Wall -O2"

unset LANG
exec "${GCCRUN}" ${EJUDGE_FLAGS} -static -s "$1" -o "$2" -lm
