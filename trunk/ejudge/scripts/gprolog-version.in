SCRIPT_DIR="@ac_cv_lang_script_dir_expanded@"

[ "${EJUDGE_LANG_CONFIG}" = "" ] && EJUDGE_LANG_CONFIG="${SCRIPT_DIR}/lang-config.sh"

if [ -x "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  GPLCRUN="gplc"
  GPROLOGDIR=""
fi

if [ x"${GPLCRUN}" = x -o x"${GPLCRUN}" = xfalse ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"${GPROLOGDIR}" != x ]
then
    PATH="${GPROLOGDIR}:${PATH}"
fi

if [ x"$1" = x-p ]
then
    echo "${GPLCRUN}"
    exit 0
fi
    
"${GPLCRUN}" --version 2>/dev/null >/dev/null || exit 1

[ x"$1" = x-f ] && echo -n "GNU Prolog "

"${GPLCRUN}" --version 2>&1 | grep "Prolog compiler" | gawk '{ print $5; }'
[ $? != 0 -a $? != 1 ] && exit 1
exit 0
