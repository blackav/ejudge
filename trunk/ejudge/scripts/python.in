# This is a `compilation' script for the Python language.
# The idea is to append "#!${PYTHONPATH}" string
# to the beginning of the file.
# Usage: python <input> <output>

# using EJUDGE_FLAGS we may pass additional flags

SCRIPT_DIR="@ac_cv_lang_script_dir_expanded@"
EJUDGE_LANG_CONFIG="${SCRIPT_DIR}/lang-config.sh"

if [ -x "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  PYTHONPATH="/usr/bin/python"
fi

if [ x"${PYTHONPATH}" = x -o x"${PYTHONPATH}" = xfalse ]
then
  echo "This language is not supported." >&2
  exit 1
fi

echo "#!${PYTHONPATH} -W ignore ${EJUDGE_FLAGS}" > $2
echo >> $2
cat $1 >> $2
chmod +x $2
exit 0
