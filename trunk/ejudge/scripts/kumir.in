# This is a `compilation' script for the Kumir language.
# Usage: kumir <input> <output>

# using EJUDGE_FLAGS we may pass additional flags

LANG_CONFIG_DIR="@lang_config_dir@"
[ "${EJUDGE_LANG_CONFIG}" = "" ] && EJUDGE_LANG_CONFIG="${LANG_CONFIG_DIR}/kumir.cfg"

if [ -f "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  version="unknown"
  KUMIRPATH="/usr/local/bin/ckumir"
fi

if [ x"${version}" = x ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if grep __END__ "$1"
then
  echo "Program must not contain __END__" >&2
  exit 1
fi

if ! "${KUMIRPATH}" --check --program-encoding=UTF-8 "$1"
then
  exit $?
fi

echo '#! /bin/sh' > "$2"
echo 'cat <<__END__ > "${0}__"' >> "$2"
cat "$1" >> "$2"
echo '__END__' >> "$2"
echo 'exec "'${KUMIRPATH}'" --run --program-encoding=UTF-8 "${0}__"' >> "$2"
chmod +x $2
exit 0
