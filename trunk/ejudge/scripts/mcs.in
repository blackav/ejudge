# A script for compilation of C# programs using the mono compiler.
# Usage: mcs in-file out-file

# using EJUDGE_FLAGS we may pass additional flags

SCRIPT_DIR="@ac_cv_lang_script_dir_expanded@"
EJUDGE_LANG_CONFIG="${SCRIPT_DIR}/lang-config.sh"

if [ -x "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  MCSRUN="gmcs"
  MCSDIR=""
fi

if [ x"${MCSRUN}" = x -o x"${MCSRUN}" = xfalse ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"${MCSDIR}" != x ]
then
  PATH="${MCSDIR}/bin:${PATH}"
fi

[[ "${EJUDGE_FLAGS}" = "" ]] && EJUDGE_FLAGS="-optimize+"

exec "${MCSRUN}" ${EJUDGE_FLAGS} "$1" -out:"$2"
