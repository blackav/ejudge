SCRIPT_DIR="@ac_cv_lang_script_dir_expanded@"

[ "${EJUDGE_LANG_CONFIG}" = "" ] && EJUDGE_LANG_CONFIG="${SCRIPT_DIR}/lang-config.sh"

if [ -x "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  VBNCRUN="vbnc"
  VBNCDIR=""
fi

if [ x"${VBNCRUN}" = x -o x"${VBNCRUN}" = xfalse ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"${VBNCDIR}" != x ]
then
  PATH="${VBNCDIR}/bin:${PATH}"
fi

if [ x"$1" = x-p ]
then
    echo "${VBNCRUN}"
    exit 0
fi
    
"${VBNCRUN}" /help 2>/dev/null >/dev/null || exit 1

[ x"$1" = x-f ] && echo -n "Mono Visual Basic "

"${VBNCRUN}" /help 2>&1 | head -1 | awk '{print $5;}'
