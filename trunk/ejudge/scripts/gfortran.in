# using EJUDGE_FLAGS we may pass additional flags

SCRIPT_DIR="@ac_cv_lang_script_dir_expanded@"
EJUDGE_LANG_CONFIG="${SCRIPT_DIR}/lang-config.sh"

if [ -x "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  GFORTRANRUN="gfortran"
  GFORTRANDIR=
fi

if [ x"${GFORTRANRUN}" = x -o x"${GFORTRANRUN}" = xfalse ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"${GFORTRANDIR}" != x ]
then
    PATH="${GFORTRANDIR}:${PATH}"
fi

[ x"${EJUDGE_FLAGS}" = x ] && EJUDGE_FLAGS="-O2"

exec "${GFORTRANRUN}" ${EJUDGE_FLAGS} -static -s "$1" -o "$2"
