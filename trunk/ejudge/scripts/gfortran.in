# using EJUDGE_FLAGS we may pass additional flags

LANG_CONFIG_DIR="@lang_config_dir@"
[ "${EJUDGE_LANG_CONFIG}" = "" ] && EJUDGE_LANG_CONFIG="${LANG_CONFIG_DIR}/gfortran.cfg"

if [ -f "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  version_gfortran="unknown"
  GFORTRANRUN="gfortran"
  GFORTRANDIR=
fi

if [ x"${version_gfortran}" = x ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"${GFORTRANDIR}" != x ]
then
    PATH="${GFORTRANDIR}:${PATH}"
fi

[ x"${EJUDGE_FLAGS}" = x ] && EJUDGE_FLAGS="-O2"

exec "${GFORTRANRUN}" ${EJUDGE_FLAGS} -static -s "$1" -o "$2"
