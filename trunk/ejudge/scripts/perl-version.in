SCRIPT_DIR="@ac_cv_lang_script_dir_expanded@"

[ "${EJUDGE_LANG_CONFIG}" = "" ] && EJUDGE_LANG_CONFIG="${SCRIPT_DIR}/lang-config.sh"

if [ -x "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  PERLPATH="/usr/bin/perl"
fi

if [ x"${PERLPATH}" = x -o x"${PERLPATH}" = xfalse ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"$1" = x-p ]
then
    echo "${PERLPATH}"
    exit 0
fi

"${PERLPATH}" --version 2>/dev/null >/dev/null || exit 1
    
[ x"$1" = x-f ] && echo -n "Perl "

"${PERLPATH}" --version 2>&1 | grep "This is perl" | gawk -v FS="[ v]" '{ print $5; }'
