LANG_CONFIG_DIR="@lang_config_dir@"

function common_config()
{
  echo 'long_name="Perl"'
  echo 'src_sfx=".pl"'
  echo 'arch="linux-shared"'
}

function failure()
{
  rm -f conftest*
  echo 'version='
  echo 'arg="'"${arg}"'"'
  common_config
  echo 'PERLPATH=/bin/false'
  [ "${verbose}" = 1 ] && echo "no" >&2
  exit 1
}

if [ x"$1" = x-v ]
then
  verbose=1
  shift
fi

# recheck the language
if [ x"$1" = x-r ]
then
  arg="$2"
  [ x"$2" != x ] && perl="$2"
  [ "${perl}" = "" ] && perl="perl"

  [ "${verbose}" = 1 ] && echo -n "checking whether Perl is available..." >&2
  "${perl}" --version >/dev/null 2>&1 || failure
  version=`"${perl}" --version 2>&1 | grep "This is perl" | gawk -v FS="[ v]" '{ print $5; }'` || failure
  [ "${version}" != "" ] || failure
  PERLPATH=`which "${perl}"` || failure
  [ "${PERLPATH}" != "" ] || failure
  echo "#! ${PERLPATH} -W" > conftest.pl
  echo 'print "OK"' >> conftest.pl
  chmod +x ./conftest.pl || failure
  ./conftest.pl >/dev/null 2>&1 || failure

  rm -f ./conftest*
  echo 'version="'"${version}"'"'
  echo 'arg="'"${arg}"'"'
  common_config
  echo 'PERLPATH="'"${PERLPATH}"'"'
  [ "${verbose}" = 1 ] && echo "yes, ${PERLPATH}, ${version}" >&2
  exit 0
fi

if [ x"$1" = x-l ]
then
  echo "Perl interpreter [http://www.perl.org]"
  exit 0
fi

[ "${EJUDGE_LANG_CONFIG}" = "" ] && EJUDGE_LANG_CONFIG="${LANG_CONFIG_DIR}/perl.cfg"

if [ -f "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  PERLPATH="/usr/bin/perl"
fi

if [ x"${PERLPATH}" = x -o x"${PERLPATH}" = xfalse ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"$1" = x-p ]
then
    echo "${PERLPATH}"
    exit 0
fi

"${PERLPATH}" --version 2>/dev/null >/dev/null || exit 1
    
[ x"$1" = x-f ] && echo -n "Perl "

"${PERLPATH}" --version 2>&1 | grep "This is perl" | gawk -v FS="[ v]" '{ print $5; }'
