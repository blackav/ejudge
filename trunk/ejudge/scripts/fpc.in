# using EJUDGE_FLAGS we may pass additional flags

SCRIPT_DIR="@ac_cv_lang_script_dir_expanded@"
EJUDGE_LANG_CONFIG="${SCRIPT_DIR}/lang-config.sh"

if [ -x "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  FPCRUN="fpc"
  FPCDIR=
fi

if [ x"${FPCRUN}" = x -o x"${FPCRUN}" = xfalse ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"${FPCDIR}" != x ]
then
    PATH="${FPCDIR}:${PATH}"
fi

# These compilation options enables various run-time checks
#${FPCRUN} -Ci -Co -Cr -Ct -So -XS $1 -o${2}

# No run-time checks
"${FPCRUN}" ${EJUDGE_FLAGS} -So -XS "$1" "-o$2"

#if the output file is not created - compile error
[ -f "$2" ] || exit 1
exit 0
