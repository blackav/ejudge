# using EJUDGE_FLAGS we may pass additional flags

LANG_CONFIG_DIR="@lang_config_dir@"
[ "${EJUDGE_LANG_CONFIG}" = "" ] && EJUDGE_LANG_CONFIG="${LANG_CONFIG_DIR}/swift.cfg"

if [ -f "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  version="unknown"
  SWRUN="swiftc"
  SWDIR=
fi

if [ x"${version}" = x ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"${SWDIR}" != x ]
then
    PATH="${SWDIR}:${PATH}"
fi

if [ "${EJUDGE_BUILD_SCRIPT}" != "" ]
then
    export EJUDGE_LANGUAGE="swift"
    export EJUDGE_COMPILER="${SWRUN}"
    exec "${EJUDGE_BUILD_SCRIPT}" $@
fi

if [ "${EJUDGE_OPT_BUILD_SCRIPT}" != "" -a -x "${EJUDGE_OPT_BUILD_SCRIPT}" ]
then
    export EJUDGE_LANGUAGE="swift"
    export EJUDGE_COMPILER="${SWRUN}"
    exec "${EJUDGE_OPT_BUILD_SCRIPT}" $@
fi

[ x"${EJUDGE_FLAGS}" = x ] && EJUDGE_FLAGS="-O"

unset LANG
unset LC_ALL
unset LC_MESSAGES
unset LANGUAGE

exec "${SWRUN}" ${EJUDGE_FLAGS} "$1" ${EJUDGE_FLAGS_2} -o "$2" -Xlinker -lm
